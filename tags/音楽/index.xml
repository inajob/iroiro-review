      <pubDate>Mon, 18 Jul 2022 22:00:32 +0000</pubDate>
      
      <guid>https://inajob.github.io/iroiro-review/post/raspberrypi%E3%82%92%E5%86%85%E8%94%B5%E3%81%97%E3%81%A6%E9%AB%98%E6%A9%9F%E8%83%BD%E3%81%95%E3%81%9B%E3%81%9F%E3%82%B9%E3%83%94%E3%83%BC%E3%82%AB%E3%83%BC/</guid>
